@model Movie

@{
    ViewData["Title"] = Model.Title;
}

<div class="row justify-content-between mt-60-px">
    <div class="col-md-4">
        <img src="~/images/poster/@Model.Poster" class="img-thumbnail" alt="@Model.Title" />
    </div>
    <div class="col-md-8">
        <div class="row">
            <div class="col-xl-10 col-md-12 mx-2">
                <div class="d-flex justify-content-between mb-3">
                    <h3>@Model.Title</h3>
                    <span class="mt-2">
                        <i class="bi bi-star-fill text-warning"></i>
                        <span class="text-muted">@Model.Rate.ToString("0.0")</span>
                    </span>
                </div>
                <span class="text-muted mr-3">
                    <i class="bi bi-calendar-week"></i>
                    @Model.Year
                </span>
                <span class="text-muted">
                    <i class="bi bi-film"></i>
                    @ViewBag.Gener
                </span>
                <p class="text-justify mt-3">@Model.Story</p>
                <a asp-action="Edit" asp-route-id="@Model.MovieId" class="btn btn-outline-primary mx-2">
                    <i class="bi bi-pencil"></i>
                    Edit
                </a>
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@Model.MovieId" onclick="return confirm('Are you sure ?!')">
                    <i class="bi bi-trash"></i>
                    Delete
                </a>
                <br />
                <a asp-action="Index" class="btn btn-outline-secondary m-2 px-5">Back to List</a>

            </div>
        </div>
        <div class="row w-100 pt-3 ">
            <div class="col-md-12">
                <video class="w-100 h-auto" src="~/Videos/Trailer/@Model.Trailer" controls></video>

            </div>
        </div>


    </div>

</div>